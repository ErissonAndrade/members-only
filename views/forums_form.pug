extends layout

block content
    div.d-flex.flex-column.flex-grow-1.justify-content-center
        h1.text-center=title
        if(currentUser)
            form.text-center.d-flex.flex-column.align-items-center.gap-2.fs-5(action="", method="POST")
                label(for="password") Please enter the password to access this forum:
                input(type="password", name="password", id="password")
                button.btn.btn-primary(type="submit") Submit
            if(error)
                p.mt-2.text-center.text-warning.fs-6=error
        else
            div.text-center.fs-5
                div.d-flex.flex-column.align-items-center.text-center.gap-3
                div.d-flex.flex-column.gap-1 You must sign in to access this forum!  
                    a(href="/sign-in") 
                        button.btn.btn-primary Sign in
                div.d-flex.flex-column.gap-1 Don't have an account?
                    a(href="/sign-up") 
                        button.btn.btn-primary Sign up
            
        